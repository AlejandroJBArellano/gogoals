model Workspace {
    id          String   @id @default(uuid())
    name        String
    description String?
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    ownerId     String
    owner       User     @relation(fields: [ownerId], references: [id])

    // Relationships
    projects     Project[]
    colaborators Collaborator[]

    @@map("workspaces")
}
